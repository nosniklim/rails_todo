default: &default
  adapter: mysql2
  encoding: utf8
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: <%= ENV['DB_USERNAME'] || 'root' %>
  password: <%= ENV['DB_PASSWORD'] || 'password' %>
  host: <%= ENV['DB_HOST'] || '127.0.0.1' %>
  timeout: 5000

test:
  <<: *default
  database: <%= ENV['DB_NAME_TEST'] || 'app_test' %>
