{
  "customSyntax": "postcss-scss",
  "extends": ["stylelint-config-standard-scss", "stylelint-config-prettier"],
  "plugins": ["stylelint-order"],
  "rules": {
    "indentation": 2,
    "linebreaks": "unix",
    "selector-class-pattern": "^[a-z][a-z0-9\\-]*$",
    "order/properties-order": null
  }
}
