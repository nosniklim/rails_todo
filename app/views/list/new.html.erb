<div class="listnewPage">
  <div class="container">
    <%= form_with model: @list, url: {action: :create}, class: "new_list", local: true do |f| %>
      <% if @list.errors.any? %>
        <p class="text-danger">Title must be less than 255 characters.</p>
      <% end %>
      <%= f.label :title %>
      <%= f.text_field :title, autofocus: true, class: "form-control listName", placeholder: "Add a list..." %>
      <div class="text-center"><%= f.submit "Create", class: "submitBtn" %></div>
    <% end %>
  </div>
</div>
